<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adxcorp.adxdev">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.adxcorp.adxdev.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.adxcorp.adxdev.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adxcorp.adxdev.InterstitialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adxdev.BannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adxdev.CloseAdActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.adxcorp.adxdev.CloseNativeAdActivity" />
        <activity
            android:name="com.adxcorp.adxdev.NativeAdFactoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adxdev.NativeAdRecyclerViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adxdev.RewardedVideoActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.adxcorp.adxdev.RewardedVideoAdMobActivity" />
    </application>

</manifest>