<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adxcorp.adsample">

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.adxcorp.adsample.InterstitialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.BannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.CloseAdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.NativeAdFactoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.NativeAdRecyclerViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.AppWallActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.adxcorp.adsample.RewardedVideoActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>